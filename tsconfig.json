{
	"compilerOptions": {
		"target": "ES2023",
		"module": "commonjs",
		"outDir": "./dist",
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*", "tests/**/*", "vitest.config.ts"],
	"exclude": ["node_modules", "dist", "build"]
}
